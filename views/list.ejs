<%- include("header") -%>
    
    

    <div class="container0" style="padding-top: 50px;">

        <div class="container1">

            <div class="side"><img src="images/tonew.png" class="img1"></div>

            <div>
                <Div class="day"> <%=KindOfDay %>! </br>Have you complete your task??? 
                </div><br><br>
                <div>
                    <div class="box">
                        <form action="/" method="post" class="item">
                            <input type="text" name="task" placeholder="Enter your task here" autocomplete="off">
                            <button type="submit" name="button" value=<%= KindOfDay %>>+</button>
                        </form>
                        <% taskItems.forEach((el)=>{ %>
                            <form action="/delete" method="post">
                                <div class="item">
                                    <input type="checkbox" onClick="this.form.submit()" value="<%= el._id %>" name="checkbox">
                                    <p> <%= el.name %> </p>
                                </div>
                                <input type="hidden" name="hide" value=<%= KindOfDay %>>
                            </form>
                            <% }) %> 
                    </div>
                </div>
            </div>

        </div>
    </div>


    <%- include("footer") -%>